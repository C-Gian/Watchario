<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RememberMe" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#D856FF82</item>
        <item name="colorPrimaryVariant">#131313</item>
        <item name="colorOnPrimary">#131313</item>

        <!-- fab color -->
        <item name="colorSecondary">#D856FF82</item>

        <item name="colorSecondaryVariant">#131313</item>

        <!-- fab plus color -->
        <item name="colorOnSecondary">#FFFFFF</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#1E1E1E</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:windowContentTransitions">true</item>
    </style>
    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="roundedCornersImageViewShow" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8%</item>
        <item name="backgroundTint">@android:color/white</item>
    </style>


    <!--chip style for filters sheet-->
    <style name="main_filter" parent="@style/Widget.MaterialComponents.Chip.Choice">
       <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="chipStrokeColor">@color/chip_stroke_color</item>
        <item name="chipCornerRadius">15dp</item>
        <item name="chipStrokeWidth">1.5dp</item>
        <item name="fontFamily">@font/futura_book</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="main_others_filter" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="chipStrokeColor">@color/chip_stroke_color</item>
        <item name="chipCornerRadius">15dp</item>
        <item name="chipStrokeWidth">1.5dp</item>
        <item name="fontFamily">@font/futura_book</item>
        <item name="android:textSize">13sp</item>
    </style>


    <!--chip styles for others element-->
    <style name="disable_chips_Style" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">#40434343</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="chipStrokeColor">#40434343</item>
        <item name="chipCornerRadius">0dp</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="fontFamily">@font/futura_book</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="show_tag_chip_Style" parent="@style/Widget.MaterialComponents.Chip.Filter">
        <item name="fontFamily">@font/futura_book</item>
        <item name="android:textColor">@color/white</item>
        <item name="chipCornerRadius">0dp</item>
        <item name="android:clickable">false</item>
        <item name="android:checkable">false</item>
        <item name="checkedIconVisible">false</item>
        <item name="closeIconVisible">false</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="edit_tag_chip_Style" parent="@style/Widget.MaterialComponents.Chip.Entry">
        <item name="fontFamily">@font/futura_book</item>
        <item name="checkedIcon">@null</item>
        <item name="chipCornerRadius">0dp</item>
        <item name="android:clickable">false</item>
        <item name="android:enabled">false</item>
        <item name="android:checked">false</item>
        <item name="android:textSize">13sp</item>
    </style>


    <style name="CursorColor">
        <item name="colorPrimary">#D856FF82</item>
    </style>>
    <style name="fab_3_rounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15%</item>
    </style>
    <style name="BottomNavigationView">
        <item name="fontFamily">@font/nunito_light</item>
        <item name="android:textSize">5sp</item>
        <item name="android:background">#00222327</item>
    </style>
    <style name="SearchViewTheme" parent="Widget.AppCompat.Light.SearchView">
        <item name="android:maxWidth">10000dp</item>
        <item name="android:textColorHint">#B2FFFFFF</item>
    </style>
</resources>